@using Goals.Models
@model IEnumerable<Goal>
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
</head>

<body>
    <nav>
        <ul class="list-group">
            <li class="list-group-item">@Html.ActionLink("Home", "Index", "Home")</li>
            <li class="list-group-item">@Html.ActionLink("All goals", "Index", "All")</li>
            <li class="list-group-item">@Html.ActionLink("Planned goals", "Index", "Planned")</li>
            <li class="list-group-item">@Html.ActionLink("Important goals", "Index", "Important")</li>
            <li class="list-group-item">@Html.ActionLink("Today's goals", "Index", "Todays")</li>
        </ul>
    </nav>

    <div class="list-group">
        <ul>
            @foreach (Goal goal in Model)
            {
                <li class="list-group-item">
                    <p>@goal.Title</p>
                    <p>@goal.Description</p>
                    <p>@goal.Importance</p>
                    @if (goal.DueDate.HasValue)
                    {
                        <p>@goal.DueDate</p>
                    }
                    <p>@goal.State</p>
                    <form>
                        <input type="button" value="Delete goal" class="btn btn-danger"/>
                        <input type="button" value="Edit goal" class="btn btn-warning" />
                    </form>
                </li>
            }
        </ul>
    </div>
    @RenderBody()

</body>
</html>